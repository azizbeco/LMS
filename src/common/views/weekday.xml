
            <odoo>
                <data>
                    <record id="weekday_list" model="ir.ui.view">
                        <field name="name">Weekday list</field>
                        <field name="model">common.weekday</field>
                        <field name="arch" type="xml">
                            <list>
                                <field name="name"/>
                                <field name="code"/>
                            </list>
                        </field>
                    </record>
                    <record id="weekday_form" model="ir.ui.view">
                        <field name="name">Weekday</field>
                        <field name="model">common.weekday</field>
                        <field name="arch" type="xml">
                            <form>
                                <sheet>
                                    <group>
                                        <field name="name"/>
                                        <field name="code"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </record>

                    <record id="Weekday_action" model="ir.actions.act_window">
                        <field name="name">Weekday</field>
                        <field name="res_model">common.weekday</field>
                        <field name="view_mode">list,form</field>
                    </record>

                  <menuitem id="menu_common_weekday" name="Common" action="Weekday_action"/>

                </data>
            </odoo>
