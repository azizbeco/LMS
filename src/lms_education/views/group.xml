
            <odoo>
                <data>
                    <record id="group_list" model="ir.ui.view">
                        <field name="name">group</field>
                        <field name="model">le.group</field>
                        <field name="arch" type="xml">
                            <list>
                                <field name="name"/>
                                <field name="course_id"/>
                            </list>
                        </field>
                    </record>
                    <record id="group_form" model="ir.ui.view">
                        <field name="name">group</field>
                        <field name="model">le.group</field>
                        <field name="arch" type="xml">
                            <form>
                                <header>
                                    <button name="make_schedule_wizard" type="object" string="Make Schedule" class="btn-primary" />
                                </header>
                                <sheet>
                                    <group>
                                        <field name="name"/>
                                        <field name="course_id"/>
                                    </group>
                                    <notebook>
                                        <page string="Student List">
                                            <field name="group_student_ids">
                                                <list editable="top">
                                                    <field name="student_id"/>
                                                    <field name="status"/>
                                                </list>
                                            </field>
                                        </page>
                                    </notebook>
                                </sheet>
                            </form>
                        </field>
                    </record>
            
                    <record id="group_action" model="ir.actions.act_window">
                        <field name="name">group</field>
                        <field name="res_model">le.group</field>
                        <field name="view_mode">list,form</field>
                    </record>
            
                </data>
            </odoo>
        