
            <odoo>
                <data>
                    <record id="course_list" model="ir.ui.view">
                        <field name="name">course</field>
                        <field name="model">le.course</field>
                        <field name="arch" type="xml">
                            <list>
                                <field name="name"/>
                                <field name="subject_ids" widget="many2many_tags"/>
                            </list>
                        </field>
                    </record>
                    <record id="course_form" model="ir.ui.view">
                        <field name="name">course</field>
                        <field name="model">le.course</field>
                        <field name="arch" type="xml">
                            <form>
                                <header>
                                    <button name="action_create_group" type="object" string="Create Group" class="btn-primary"/>
                                    <button name="action_open" type="object" string="Open" class="btn-primary" invisible="status != 'draft' and status != 'closed'"/>
                                    <button name="action_closed" type="object" string="Closed" class="btn-danger" invisible="status != 'open'"/>
                                    <button name="action_draft" type="object" string=" Reset Draft" class="btn-success" invisible="status != 'open' and status != 'closed'"/>
                                </header>
                                <sheet>
                                    <group>
                                        <field name="name"/>
                                        <field name="subject_ids" widget="many2many_tags"/>
                                        <field name="status" invisible="1"/>
                                    </group>

                                    <notebook>
                                        <page string="Lesson Pages">
                                            <field name="lesson_ids">
                                                <list>
                                                    <field name="name"/>
                                                </list>
                                            </field>
                                        </page>
                                    </notebook>
                                </sheet>
                            </form>
                        </field>
                    </record>
            
                    <record id="course_action" model="ir.actions.act_window">
                        <field name="name">course</field>
                        <field name="res_model">le.course</field>
                        <field name="view_mode">list,form</field>
                    </record>
            
                </data>
            </odoo>
        