
            <odoo>
                <data>
                    <record id="schedule_table_list" model="ir.ui.view">
                        <field name="name">Schedule Table</field>
                        <field name="model">le.schedule.table</field>
                        <field name="arch" type="xml">
                            <list>
                                <field name="name"/>
                                <field name="group_id"/>
                                <field name="teacher_id"/>
                                <field name="start_date"/>
                                <field name="weekday_ids"/>
                                <field name="lesson_start_time"/>
                                <field name="lesson_end_time"/>
                            </list>
                        </field>
                    </record>
                    <record id="schedule_table_form" model="ir.ui.view">
                        <field name="name">Schedule Table</field>
                        <field name="model">le.schedule.table</field>
                        <field name="arch" type="xml">
                            <form>
                                <sheet>
                                    <group>
                                        <field name="name"/>
                                        <field name="group_id"/>
                                        <field name="teacher_id"/>
                                        <field name="start_date"/>
                                        <field name="weekday_ids" widget="many2many_tags"/>
                                        <field name="lesson_start_time" widget="float_time"/>
                                        <field name="lesson_end_time" widget="float_time"/>
                                    </group>
                                    <notebook>
                                        <page string="Schedule Lesson">
                                            <field name="schedule_lesson_ids">
                                                <list>
                                                    <field name="name"/>
                                                    <field name="lesson_date"/>
                                                    <field name="lesson_start_time"/>
                                                    <field name="lesson_end_time"/>
                                                </list>
                                            </field>
                                        </page>
                                    </notebook>
                                </sheet>
                            </form>
                        </field>
                    </record>
            
                    <record id="schedule_table_action" model="ir.actions.act_window">
                        <field name="name">Schedule Table</field>
                        <field name="res_model">le.schedule.table</field>
                        <field name="view_mode">list,form</field>
                    </record>
            
                </data>
            </odoo>
        