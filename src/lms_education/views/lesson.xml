
            <odoo>
                <data>
                    <record id="lesson_list" model="ir.ui.view">
                        <field name="name">lesson</field>
                        <field name="model">le.lesson</field>
                        <field name="arch" type="xml">
                            <list>
                                <field name="name"/>
                                <field name="course_id"/>
                            </list>
                        </field>
                    </record>
                    <record id="lesson_form" model="ir.ui.view">
                        <field name="name">lesson</field>
                        <field name="model">le.lesson</field>
                        <field name="arch" type="xml">
                            <form>
                                <sheet>
                                    <group>
                                        <field name="name"/>
                                        <field name="course_id"/>
                                    </group>
                                    <notebook>
                                        <page string="Homework">
                                            <field name="homework_ids">
                                                <list>
                                                    <field name="name"/>
                                                </list>
                                            </field>
                                        </page>
                                    </notebook>
                                </sheet>
                            </form>
                        </field>
                    </record>
            
                    <record id="lesson_action" model="ir.actions.act_window">
                        <field name="name">lesson</field>
                        <field name="res_model">le.lesson</field>
                        <field name="view_mode">list,form</field>
                    </record>
            
                </data>
            </odoo>
        