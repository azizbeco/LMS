<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="xml_generate_form" model="ir.ui.view">
            <field name="name">xml.generate.form</field>
            <field name="model">xml.generate</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="module_path"/>
                            <field name="model_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                    <footer>
                        <button type="object" name="generate" string="Generate" class="btn-primary"/>
                        <button special="cancel" string="Close"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="xml_generate_action" model="ir.actions.act_window">
            <field name="name">XML Generate</field>
            <field name="res_model">xml.generate</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="xml_generate_menu" action="xml_generate_action"/>
    </data>
</odoo>